<Window x:Class="AppointmentExporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppointmentExporter"
        mc:Ignorable="d"
        Title="AppointmentExporter" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DatePicker DisplayDate="{Binding Begin,Mode=TwoWay}" SelectedDate="{Binding Begin,Mode=TwoWay}" Width="300"/>
            <DatePicker DisplayDate="{Binding End,Mode=TwoWay}" SelectedDate="{Binding End,Mode=TwoWay}" Width="300"/>
            <Button Content="Export CSV" Command="{Binding ExportCsvCommand}" Width="300"/>
            <Label Content="{Binding Status}"/>
        </StackPanel>
        
        
    </Grid>
</Window>
